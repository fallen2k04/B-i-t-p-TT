using System;

namespace System
{
    class Program
    {
        static void Main(string[] args)
        {
            // Nhâp tên
            Console.WriteLine("Nhập tên của bạn");
            string ten = Console.ReadLine();
            // Nhập tuổi 
            Console.WriteLine("Nhập năm sinh của bạn: ");
            float Tuổi = float.Parse(Console.ReadLine());

            Console.WriteLine("Tuổi của bạn: ");

            // Điểm Toán
            Console.WriteLine("Nhập điểm Toán của bạn");
            float Toán = float.Parse(Console.ReadLine());

            // Điểm Lý
            Console.WriteLine("Nhập điểm Lý của bạn");
            float Lý = float.Parse(Console.ReadLine());

            // Điểm Hóa
            Console.WriteLine("Nhập điểm Hóa của bạn");
            float Hóa = float.Parse(Console.ReadLine());

            // Kiểm tra xem Học sinh đạt hay không
            float ĐiểmTB = (Toán + Lý + Hóa) / 3;
            if (ĐiểmTB >= 5)
            {
                Console.WriteLine("Đạt điều kiện");
                return;
            }
            else
            {
                if (ĐiểmTB <= 5) ;
                {
                    Console.WriteLine("Không Đạt điều kiện");
                    return;
                }
            }
        }
    }
}
